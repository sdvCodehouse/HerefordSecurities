@model IEnumerable<HerefordSecuritiesLtd.Entities.ServiceProvided>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
	<table class="table table-striped table-condensed">
		<tr>
						<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
					<th>
				@Html.DisplayNameFor(model => model.Narrative)
			</th>
					<th>
				@Html.DisplayNameFor(model => model.SiteDataId)
			</th>
					<th>
				@Html.DisplayNameFor(model => model.IsActive)
			</th>
				<th></th>
		</tr>

	@foreach (var item in Model) {
		<tr>
						<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.Title)
				</div>
			</td>
					<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.Narrative)
				</div>
			</td>
					<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.SiteDataId)
				</div>
			</td>
					<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.IsActive)
				</div>
			</td>
				<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
			</tr>
	}

	</table>
</div>
