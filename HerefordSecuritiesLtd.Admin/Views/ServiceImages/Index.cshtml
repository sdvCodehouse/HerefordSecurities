@model IEnumerable<HerefordSecuritiesLtd.Entities.ServiceImage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
	<table class="table table-striped table-condensed">
		<tr>
					<th>
				@Html.DisplayNameFor(model => model.ImageLink)
			</th>
					<th>
				@Html.DisplayNameFor(model => model.ServiceProvidedId)
			</th>
				<th></th>
		</tr>

	@foreach (var item in Model) {
		<tr>
					<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.ImageLink)
				</div>
			</td>
					<td>
				<div class="table-row-condensed">
					@Html.DisplayFor(modelItem => item.ServiceProvidedId)
				</div>
			</td>
